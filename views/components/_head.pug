mixin head(title, ...cssFiles)
    html(lang="en")
        head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            for cssFile in cssFiles || []
                link(rel="stylesheet", href=cssFile)
            title= title
