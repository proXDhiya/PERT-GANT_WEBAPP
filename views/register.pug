include ./_mixer

//- head implimentation
+head('Login', '/css/main.css')
body
    //- header implementation
    - itemHeader = {name: 'Login', link: '/'}
    +header(itemHeader)

    //- Register form
    section
        .container
            +form('POST', '/register', 'Register', 'Create an account', [
                {
                    type: 'input',
                    inputType: 'text',
                    name: 'username',
                    label: 'Username',
                    placeholder: 'Enter your username',
                    required: true
                },
                {
                    type: 'input',
                    inputType: 'password',
                    name: 'password',
                    label: 'Password',
                    placeholder: 'Enter your password',
                    required: true
                },
                {
                    type: 'input',
                    inputType: 'password',
                    name: 'password2',
                    label: 'Confirm Password',
                    placeholder: 'Confirm your password',
                    required: true
                }
            ])

    //- if error
    if error
        +msg('error', error)
    